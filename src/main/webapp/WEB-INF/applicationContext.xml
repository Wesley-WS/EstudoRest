<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">
	<context:annotation-config />
	
	<context:component-scan base-package="br.com.filipe.action.*" />
	
	<bean id="homeAction" class="br.com.filipe.action.HomeAction"></bean>
	<bean id="listarFacadeImpl" class="br.com.filipe.facade.ListarFacadeImpl"></bean>
	<bean id="listarDaoImpl" class="br.com.filipe.dao.ListarDaoImpl"></bean>
</beans>